<% layout(`layouts/boilerplate`)%>
    <div class="row form-div">
        <div class="col-8 offset-1">
            <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <br>

                <div class="mb-3">
                    <label for="title" class="from-label">Title:</label>
                    <input type="text" id="title" name="listing[title]" required class="form-control">
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">Enter Valid Title</div>

                </div>
                <div class="mb-3">
                    <label for="description" class="from-label">Description:</label>
                    <textarea id="description" name="listing[description]" rows="4" required
                        class="form-control"></textarea>
                    <div class="invalid-feedback">Enter Valid Description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="from-label">Upload Image:</label>
                    <input type="file" id="image" name="listing[image]" class="form-control">
                    <div class="invalid-feedback">Enter valid Image URL</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="from-label">Price:</label>
                        <input type="" id="price" name="listing[price]" required class="form-control">
                        <div class="invalid-feedback">Enter Valid Price</div>

                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="from-label">Country:</label>
                        <input type="text" id="country" name="listing[country]" required class="form-control">
                        <div class="invalid-feedback">Enter Valid Country Name</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="from-label">City:</label>
                    <input type="text" id="location" name="listing[location]" required class="form-control">
                    <div class="invalid-feedback">Enter Valid Location</div>
                </div>

                <button type="submit" class="btn btn-dark add-btn">Submit Listing</button>
                <br><br>

            </form>
        </div>
    </div>